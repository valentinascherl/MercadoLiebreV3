Â«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% for(products of productosAMostrar){%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= products.id %>/<%= products.category %>">
						<figure class="product-box_image">
							<img src="/images/products/<%=products.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= formatPrice(products.price, products.discount) %></h2>
							<% if(products.discount !== 0){ %>
							<span><%= products.discount %>% OFF</span>
							<%}%>
							<p><%= products.name %>></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
		    <%}%>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>